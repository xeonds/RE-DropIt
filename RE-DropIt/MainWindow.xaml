<Window x:Class="RE_DropIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RE_DropIt"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="854" MinWidth="854" MinHeight="480">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="640*"/>
            <ColumnDefinition Width="160*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListBox x:Name="listBox" Grid.Row="0" Grid.Column="0" Margin="10,10,10,10"/>
        <Button x:Name="button_folder_select"  Grid.Row="0" Grid.Column="1" Content="选择文件夹" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="Button_folder_select_Click" Height="19" Width="64"/>
    </Grid>
</Window>
